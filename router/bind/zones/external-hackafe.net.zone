{%- for servername in salt['pillar.get']('bind:internal_servers') -%}
{%- for _, ips in salt['mine.get'](servername + '.hackafe.net', 'network.ip_addrs').items() -%}
{%- for ip in ips if external_ip is not defined -%}
{%- if not salt['network.is_private'](ip) -%}
{%- set external_ip = ip -%}
{%- endif -%}
{%- endfor -%}
{%- endfor -%}
{%- endfor -%}

hackafe.net.	IN	A	{{ external_ip|default('127.0.53.53') }}

{%- set included = [] -%}
{%- for server, ips in salt['mine.get']('*', 'network.ip_addrs').items() -%}
{%- for ip in ips -%}

{%- if server not in included and server not in ignore_hosts -%}

{%- if salt['network.ip_in_subnet'](ip, '192.168.0.0/16') %}
{%- set _ = included.append(server) %}
{{ server|replace('.hackafe.net','') }}	IN	A	{{ external_ip|default('127.0.53.53') }}
{%- elif not salt['network.is_private'](ip) %}
{%- set _ = included.append(server) %}
{{ server|replace('.hackafe.net','') }}	IN	A	{{ ip }}
{%- endif -%}

{%- endif -%}

{%- endfor -%}
{%- endfor -%}

{%- for server, ips in salt['mine.get']('*', 'network.ip_addrs6').items() -%}
{%- for ip in ips -%}
{%- if not salt['network.is_private'](ip) %}
{{ server|replace('.hackafe.net','') }} IN	AAAA	{{ ip }}
{%- endif -%}
{%- endfor -%}
{%- endfor -%}
